<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:frb="clr-namespace:Ceriyo.Toolset.FRBControl" 
        xmlns:Comp="clr-namespace:Ceriyo.Toolset.Components" x:Class="Ceriyo.Toolset.MainWindow"
    Title="MainWindow" Height="600" Width="800" MinHeight="600" MinWidth="800"
    Closing="Window_Closing">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="5"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="5"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="20"></RowDefinition>
            <RowDefinition Height="25"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="30"></RowDefinition>

        </Grid.RowDefinitions>
        <DockPanel Grid.ColumnSpan="6">
            <Comp:MenuBarComponent x:Name="menuBar" VerticalAlignment="Top" DockPanel.Dock="Top"/>
        </DockPanel>
        <Label
        	Content="Conversations:" Margin="10,10,97,141" Grid.Row="3"/>
        <Label
        	Content="Scripts:" Margin="10,10,127,141" Grid.Row="4"/>

        <GridSplitter
            Grid.Column="1"
            Grid.Row="2"
            Grid.RowSpan="5"
            Width="5"
            HorizontalAlignment="Left"
            VerticalAlignment="Stretch"
            Background="Gray"
            ShowsPreview="True">

        </GridSplitter>

        <GridSplitter
            Grid.Column="4"
            Grid.Row="2"
            Grid.RowSpan="5"
            Width="5"
            HorizontalAlignment="Left"
            VerticalAlignment="Stretch"
            Background="Gray"
            ShowsPreview="True">

        </GridSplitter>

        <DockPanel
            Grid.Column="2"
            Grid.Row="2"
            Grid.ColumnSpan="2"
            Grid.RowSpan="4">
            <frb:FlatRedBallControl 
                x:Name="gameControl"/>
        </DockPanel>

        <Comp:AreaSelectionControl 
            x:Name="areaSelection"
            HorizontalAlignment="Stretch" 
            Grid.Row="2" 
            Grid.RowSpan="4"
            Grid.Column="0" 
            VerticalAlignment="Stretch"
            Width="Auto"
            Height="Auto"
            />

        <Comp:PaintObjectsControl x:Name="paintObjects"
            Grid.Column="5" 
            HorizontalAlignment="Stretch" 
            Grid.Row="4" 
            Grid.RowSpan="2"
            VerticalAlignment="Stretch"/>
        <Comp:ObjectSelectionComponent x:Name="objectSelection"
            Grid.Column="5" 
            HorizontalAlignment="Stretch" 
            Grid.Row="2" 
            Grid.RowSpan="2" 
            VerticalAlignment="Stretch" 
            Height="Auto"
            Width="Auto"/>
        <Comp:HotBarControl Grid.Column="0"
            Grid.ColumnSpan="6" 
            HorizontalAlignment="Stretch" 
            Height="Auto" 
            Grid.Row="1" 
            Grid.RowSpan="1"
            VerticalAlignment="Stretch" 
            Width="Auto"/>

    </Grid>
</Window>
