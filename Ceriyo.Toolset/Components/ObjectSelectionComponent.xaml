<UserControl x:Class="Ceriyo.Toolset.Components.ObjectSelectionComponent"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300" Background="White">
    <Grid>

        <TreeView Name="tvObjects"
                HorizontalAlignment="Stretch" 
                Height="Auto" 
                VerticalAlignment="Stretch" 
                Width="Auto">
            <TreeViewItem Name="rootPlaceables" 
                          ItemsSource="{Binding Placeables}"
                          Header="Placeables">
            </TreeViewItem>
            <TreeViewItem Name="rootItems" 
                          ItemsSource="{Binding Items}"
                          Header="Items">
            </TreeViewItem>
            <TreeViewItem Name="rootCreatures" 
                          ItemsSource="{Binding Creatures}"
                          Header="Creatures">
            </TreeViewItem>
        </TreeView>
    </Grid>
</UserControl>
